# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET        /                              			@controllers.Application.index

GET        /authentication/login                	@controllers.AuthenticationController.login
GET        /authentication/logout                	@controllers.AuthenticationController.logout
POST       /authentication		                	@controllers.AuthenticationController.authentication

GET        /search/by/query/:value                 	@controllers.SearchController.index(value: String)

GET        /file/download/by/id/:id                	@controllers.FileDownloadController.index(id: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                  controllers.Assets.at(path="/public", file)
GET        /webjars/*file                 controllers.WebJarAssets.at(file)
